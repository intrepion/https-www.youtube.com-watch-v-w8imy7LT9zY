@page "/admin/game-edit/{id:guid?}"
@rendermode InteractiveAuto
@inject AuthenticationStateProvider GetAuthenticationStateAsync
@inject NavigationManager NavigationManager
@inject IGameAdminRepository GameAdminRepository
@attribute [Authorize(Roles = "Admin")]

@* InjectionCodePlaceholder *@
@* @inject IToDoListAdminRepository ToDoListAdminRepository *@

  @if (Id.Equals(Guid.Empty))
  {
    <PageTitle>Game Creation</PageTitle>
  }
  else
  {
    <PageTitle>Game Modification</PageTitle>
  }

<section>
  @if (Id.Equals(Guid.Empty))
  {
    <h1>Game Creation</h1>
  }
  else
  {
    <h1>Game Modification</h1>
  }
  <article>
    <EditForm class="container" Model="gameAdminEditVm" OnValidSubmit="HandleSubmit">
      <DataAnnotationsValidator />
      <ValidationSummary class="text-danger" />

      @* EditRowCodePlaceholder *@

      <div class="row">
        <div class="col">
          @if (!Id.Equals(Guid.Empty))
          {
            <button @onclick="Remove" type="button" class="btn btn-danger">Remove</button>
          }
        </div>
        <div class="col">
          <a href="/admin/game-list">Cancel</a>
          @if (Id.Equals(Guid.Empty))
          {
            <button type="submit" class="btn btn-primary">Create</button>
          }
          else
          {
            <button type="submit" class="btn btn-primary">Modify</button>
          }
         </div>
      </div>
    </EditForm>
  </article>
</section>

@code {
  [Parameter]
  public Guid Id { get; set; }
  GameAdminEditVm gameAdminEditVm { get; set; } = new GameAdminEditVm();

  @* ListDeclarationCodePlaceholder *@

  protected override async Task OnInitializedAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    await base.OnInitializedAsync();

    @* OnInitializedCodePlaceholder *@
  }

  protected override async Task OnParametersSetAsync()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    var databaseGameAdminDto = await GameAdminRepository.GetByIdAsync(userName, Id);

    if (databaseGameAdminDto == null)
    {
      gameAdminEditVm = new GameAdminEditVm();
    }
    else
    {
      gameAdminEditVm = GameAdminEditVm.FromGameAdminDto(databaseGameAdminDto);
    }
  }

  async Task HandleSubmit()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name;

    if (userName == null)
    {
      return;
    }

    @* RequiredPropertyPlaceholder *@

    var gameAdminDto = GameAdminEditVm.ToGameAdminDto(gameAdminEditVm);
    gameAdminDto.ApplicationUserName = userName;

    if (Id.Equals(Guid.Empty))
    {
      var newGameAdminDto = await GameAdminRepository.AddAsync(gameAdminDto);

      if (newGameAdminDto == null)
      {
        return;
      }

      NavigationManager.NavigateTo($"/admin/game-edit/{newGameAdminDto.Id}");
    }
    else
    {
      await GameAdminRepository.EditAsync(gameAdminDto);
    }
  }

  async Task Remove()
  {
    var authState = await GetAuthenticationStateAsync.GetAuthenticationStateAsync();
    var userName = authState.User.Identity?.Name!;

    if (userName == null)
    {
      return;
    }

    if (Id.Equals(Guid.Empty))
    {
      return;
    }

    await GameAdminRepository.DeleteAsync(userName, Id);
    NavigationManager.NavigateTo($"/admin/game-list");
  }

  @* OnChangeCodePlaceholder *@
}
