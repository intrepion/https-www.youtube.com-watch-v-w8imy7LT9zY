@page "/admin/UrlNamePlaceholder-list"
@inject IGameAdminService GameAdminService
@attribute [StreamRendering]

<section>
    <h1>Game List</h1>
    <article>
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    @* <th scope="col">PropertyNamePlaceholder</th> *@
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Games == null)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">Loading...</td> *@
                    </tr>
                }
                else if (Games.Count == 0)
                {
                    <tr>
                        @* <td colspan="CountPlaceHolder">No HumanLowerGames found.</td> *@
                    </tr>
                }
                else
                {
                    @foreach (var LowercaseNamePlaceholder in Games)
                    {
                        <tr>
                            <td>@LowercaseNamePlaceholder.Id</td>
                            @* <td>@LowercaseNamePlaceholder.PropertyNamePlaceholder</td> *@
                            <td>
                                <NavButton Href="@("/admin/UrlNamePlaceholder-edit/" + LowercaseNamePlaceholder.Id)" Name="Edit" />
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <NavButton Href="/admin/UrlNamePlaceholder-edit" Name="Create" />
    </article>
</section>

@code {
    List<Game>? Games = null;

    protected override async Task OnInitializedAsync()
    {
        Games = await GameAdminService.GetAllAsync();
    }
}
